<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <OutputType>Exe</OutputType>
    <RootNamespace>Tech.Tevux.Dashboards.Controls</RootNamespace>
    <Version>0.19.0</Version>
    <Company>Tevux Technologies, MB</Company>
    <Copyright>© 2022 Tevux Technologies, MB</Copyright>
    <Title>Scripting controls for Tevux Dashboards</Title>
    <Authors>DevBot9</Authors>
    <RepositoryUrl>https://www.github.com/tevux-tech/tech-tevux-dashboards-controls-scripting</RepositoryUrl>
    <PackageProjectUrl>https://www.github.com/tevux-tech/tech-tevux-dashboards-controls-scripting</PackageProjectUrl>
    <Description>Provides C# scripting subsystem.</Description>
    <NuspecFile>Tech.Tevux.Dashboards.Controls.Scripting.nuspec</NuspecFile>
    <NuspecProperties>
      version=$(Version);
      id=$(AssemblyName);
      copyright=$(Copyright);
      title=$(Title);
      authors=$(Authors);
      description=$(Description)
    </NuspecProperties>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>

    <!--Configuring source Link-->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <DebugType>embedded</DebugType>
    <!-- End -->
  </PropertyGroup>

  <PropertyGroup Condition="'$(GITHUB_ACTIONS)' == 'true'">
    <!--This enables "deterministic builds"-->
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
  </PropertyGroup>

  <ItemGroup>
    <Page Update="Themes\Generic.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Themes\ScriptEditor.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Themes\ScriptOutput.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Themes\ScriptNud.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Themes\ScriptIndicator.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Themes\ScriptButton.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <!--Tevux related settings-->
  <PropertyGroup>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
  </PropertyGroup>

  <ItemGroup>
    <AssemblyAttribute Include="Tevux.Dashboards.Abstractions.AssemblyLoadContextAttribute">
      <ContextName>Tech.Tevux.Dashboards.Controls.Scripting</ContextName>
      <ContextFriendlyName>Generic (scripting)</ContextFriendlyName>
    </AssemblyAttribute>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Code\ScriptIndicator\TemplateProperties\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.1.1" PrivateAssets="All" />
    <PackageReference Include="AvalonEdit" Version="6.1.3.50" />
    <PackageReference Include="DevBot9.Mvvm" Version="21.1.0" />
    <PackageReference Include="DevBot9.Mvvm.UI" Version="21.1.0" />
    <PackageReference Include="MahApps.Metro" Version="2.4.9" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Scripting" Version="4.1.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.CSharp.Workspaces" Version="4.1.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.Scripting.Common" Version="4.1.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.Workspaces.Common" Version="4.1.0" />
    <PackageReference Include="NLog" Version="4.7.15" />
    <PackageReference Include="Tech.Tevux.Dashboards.Controls.Base" Version="0.20.0-preview.1" />
    <PackageReference Include="Tevux.Dashboards.Abstractions" Version="0.39.0-preview.1">
      <ExcludeAssets>runtime</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="Tevux.Software.Helpers" Version="0.18.0" />
    <PackageReference Include="Tevux.Tools.RepositorySettings" Version="1.1.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
